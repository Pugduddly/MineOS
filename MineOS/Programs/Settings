--############################### Mouse ##################################--
function SystemMouse()
    while true do
        event, button, X, Y = os.pullEvent("mouse_click")
        Y = Y + 1
        if X >= 51 and X <= 51 and Y == 1 then
            resetDesktop()
            error("Terminated")
            break
        end
        if X >= 1 and X <= 12 and Y == 3 then
            SystemClear()
            setLayout()
            SystemInfo()
        end
        if X >= 1 and X <= 12 and Y == 4 then
            SystemClear()
            setLayout()
            SystemProfiles()
            while true do
                event, button, X, Y = os.pullEvent("mouse_click")
                Y = Y + 1
                --############################### Profiles ##################################--
                if X >= 22 and X <= 50 and Y == 4 then
                    scp(22,4)
                    sbc(256)
                    w("                           ")
                    stc(32768)
                    scp(22,4)
                    ChangedName1 = read()

                    if ChangedName1 == "" then
                        ChangedName1 = "Guest"
                    end

                    if fs.exists("MineOS/Profile/User1") then
                        ChangedNameO1 = fs.open("MineOS/Profile/User1", "w")
                        ChangedNameO1.write(ChangedName1.."\n")
                        --[[
								if ChangedPass1 == "no password" then
									ChangedNameO1.write(ChangedPass1)
								else
									ChangedNameO1.write(SHA.sha256(ChangedPass1))
								end
]]--
                        ChangedNameO1.write(ChangedPass1)
                        ChangedNameO1.close()
                    end

                    SystemClear()
                    setLayout()
                    SystemProfiles()
                end
                if X >= 22 and X <= 50 and Y == 6 then
                    scp(22,6)
                    sbc(256)
                    w("                           ")
                    stc(32768)
                    scp(22,6)
                    ChangedPass1 = read("*")

                    if ChangedPass1 == "" then
                        ChangedPass1 = "no password"
                    end

                    if fs.exists("MineOS/Profile/User1") then
                        ChangedNameO1 = fs.open("MineOS/Profile/User1", "w")
                        ChangedNameO1.write(ChangedName1.."\n")
                        if ChangedPass1 == "no password" then
                            ChangedNameO1.write(ChangedPass1)
                        else
                            ChangedNameO1.write(SHA.sha256(ChangedPass1))
                        end
                        --ChangedNameO1.write(ChangedPass1)
                        ChangedNameO1.close()
                    end

                    SystemClear()
                    setLayout()
                    SystemProfiles()
                end
                if X >= 22 and X <= 50 and Y == 9 then
                    scp(22,9)
                    sbc(256)
                    w("                           ")
                    stc(32768)
                    scp(22,9)
                    ChangedName2 = read()

                    if ChangedName2 == "" then
                        ChangedName2 = "Free slot"
                    end

                    if fs.exists("MineOS/Profile/User2") then
                        ChangedNameO2 = fs.open("MineOS/Profile/User2", "w")
                        ChangedNameO2.write(ChangedName2.."\n")
                        if ChangedPass2 == "no password" then
                            ChangedNameO2.write(ChangedPass2)
                        else
                            ChangedNameO2.write(SHA.sha256(ChangedPass2))
                        end
                        --ChangedNameO2.write(ChangedPass2)
                        ChangedNameO2.close()
                    end

                    SystemClear()
                    setLayout()
                    SystemProfiles()
                end
                if X >= 22 and X <= 50 and Y == 11 then
                    scp(22,11)
                    sbc(256)
                    w("                           ")
                    stc(32768)
                    scp(22,11)
                    ChangedPass2 = read("*")

                    if ChangedPass2 == "" then
                        ChangedPass2 = "no password"
                    end

                    if fs.exists("MineOS/Profile/User2") then
                        ChangedNameO2 = fs.open("MineOS/Profile/User2", "w")
                        ChangedNameO2.write(ChangedName2.."\n")
                        if ChangedPass2 == "no password" then
                            ChangedNameO2.write(ChangedPass2)
                        else
                            ChangedNameO2.write(SHA.sha256(ChangedPass2))
                        end
                        --ChangedNameO2.write(ChangedPass2)
                        ChangedNameO2.close()
                    end

                    SystemClear()
                    setLayout()
                    SystemProfiles()
                end
                if X >= 22 and X <= 50 and Y == 14 then
                    scp(22,14)
                    sbc(256)
                    w("                           ")
                    stc(32768)
                    scp(22,14)
                    ChangedName3 = read()

                    if ChangedName3 == "" then
                        ChangedName3 = "Free slot"
                    end

                    if fs.exists("MineOS/Profile/User3") then
                        ChangedNameO3 = fs.open("MineOS/Profile/User3", "w")
                        ChangedNameO3.write(ChangedName3.."\n")
                        --[[
								if ChangedPass3 == "no password" then
									ChangedNameO3.write(ChangedPass3)
								else
									ChangedNameO3.write(SHA.sha256(ChangedPass3))
								end
]]--
                        ChangedNameO3.write(ChangedPass3)
                        ChangedNameO3.close()
                    end

                    SystemClear()
                    setLayout()
                    SystemProfiles()
                end
                if X >= 22 and X <= 50 and Y == 16 then
                    scp(22,16)
                    sbc(256)
                    w("                           ")
                    stc(32768)
                    scp(22,16)
                    ChangedPass3 = read("*")

                    if ChangedPass3 == "" then
                        ChangedPass3 = "no password"
                    end

                    if fs.exists("MineOS/Profile/User3") then
                        ChangedNameO3 = fs.open("MineOS/Profile/User3", "w")
                        ChangedNameO3.write(ChangedName3.."\n")
                        --[[
								if ChangedPass3 == "no password" then
									ChangedNameO3.write(ChangedPass3)
								else
									ChangedNameO3.write(SHA.sha256(ChangedPass3))
								end
]]--
                        ChangedNameO3.write(ChangedPass3)
                        ChangedNameO3.close()
                    end

                    SystemClear()
                    setLayout()
                    SystemProfiles()
                end
                if X >= 1 and X <= 12 and Y == 6 then
                    SystemClear()
                    setLayout()
                    SystemSettings()
                    break
                end
                if X >= 1 and X <= 12 and Y == 3 then
                    SystemClear()
                    setLayout()
                    SystemInfo()
                    break
                end
                if X >= 1 and X <= 12 and Y == 5 then
                    SystemClear()
                    setLayout()
                    SystemBackground()
                    break
                end
                if X >= 1 and X <= 6 and Y == 19 then
                    startmenu()
                    error("Terminated!")
                    break
                end
                if X >= 51 and X <= 51 and Y == 1 then
                    resetDesktop()
                    error("Terminated")
                    break
                end
            end
        end

        if X >= 1 and X <= 12 and Y == 5 then
            SystemClear()
            setLayout()
            SystemBackground()
            while true do
                event, button, X, Y = os.pullEvent("mouse_click")
                Y = Y + 1
                --############################### Background ##################################--
                --############## Design 1 ################--
                if X >= 15 and X <= 25 and Y == 4 then
                    fs.delete("MineOS/Texture/Desktop/"..currentUserName.."/1")
                    fs.copy("MineOS/Texture/Desktop/1", "MineOS/Texture/Desktop/"..currentUserName.."/1")
                    scp(15,4)
                    sbc(16384)
                    write(" Minecraft ")
                    sbc(256)
                    sleep(0.2)
                    scp(15,4)
                    write(" Minecraft ")
                    sbc(1)
                end
                --############## Design 2 ################--
                if X >= 27 and X <= 37 and Y == 4 then
                    fs.delete("MineOS/Texture/Desktop/"..currentUserName.."/1")
                    fs.copy("MineOS/Texture/Desktop/2", "MineOS/Texture/Desktop/"..currentUserName.."/1")
                    scp(27,4)
                    sbc(16384)
                    write(" Computer  ")
                    sbc(256)
                    sleep(0.2)
                    scp(27,4)
                    write(" Computer  ")
                    sbc(1)
                end
                --############## Design 3 ################--
                if X >= 39 and X <= 49 and Y == 4 then
                    fs.delete("MineOS/Texture/Desktop/"..currentUserName.."/1")
                    fs.copy("MineOS/Texture/Desktop/3", "MineOS/Texture/Desktop/"..currentUserName.."/1")
                    scp(39,4)
                    sbc(16384)
                    write(" Logo      ")
                    sbc(256)
                    sleep(0.2)
                    scp(39,4)
                    write(" Logo      ")
                    sbc(1)
                end
                --############## Design 4 ################--
                if X >= 15 and X <= 25 and Y == 6 then
                    fs.delete("MineOS/Texture/Desktop/"..currentUserName.."/1")
                    fs.copy("MineOS/Texture/Desktop/4", "MineOS/Texture/Desktop/"..currentUserName.."/1")
                    scp(15,6)
                    sbc(16384)
                    write(" Creeper   ")
                    sbc(256)
                    sleep(0.2)
                    scp(15,6)
                    write(" Creeper   ")
                    sbc(1)
                end
                --############## Design 5 ################--
                if X >= 27 and X <= 37 and Y == 6 then
                    fs.delete("MineOS/Texture/Desktop/"..currentUserName.."/1")
                    fs.copy("MineOS/Texture/Desktop/5", "MineOS/Texture/Desktop/"..currentUserName.."/1")
                    scp(27,6)
                    sbc(16384)
                    write(" Hills     ")
                    sbc(256)
                    sleep(0.2)
                    scp(27,6)
                    write(" Hills     ")
                    sbc(1)
                end
                --############## Design 6 ################--
                if X >= 39 and X <= 49 and Y == 6 then
                    fs.delete("MineOS/Texture/Desktop/"..currentUserName.."/1")
                    fs.copy("MineOS/Texture/Desktop/6", "MineOS/Texture/Desktop/"..currentUserName.."/1")
                    scp(39,6)
                    sbc(16384)
                    write(" Purple    ")
                    sbc(256)
                    sleep(0.2)
                    scp(39,6)
                    write(" Purple    ")
                    sbc(1)
                end
                --############## Custom # NEW ###############--
                if X >= 15 and X <= 19 and Y == 9 then
                    r("MineOS/Programs/Paint MineOS/Texture/Desktop/"..currentUserName.."/1")
                    r("MineOS/Programs/Settings")
                end
                --############## Custom # Open ###############--
                if X >= 21 and X <= 26 and Y == 9 then
                    sbc(2048)
                    stc(1)
                    scp(15,5)
                    w("Open File         ")
                    sbc(16384)
                    w("X")
                    sbc(1)
                    stc(32768)
                    scp(15,6)
                    w(": Name:           :")
                    scp(15,7)
                    sbc(1)
                    --	w(": ")
                    --	sbc(258)
                    --	w("               ")
                    --	sbc(1)
                    --	w(" :")
                    w(":                 :")
                    sbc(1)
                    scp(15,8)
                    w(":                 :")
                    scp(15,9)
                    w("+-----------------+")
                    scp(17,7)
                    sbc(258)
                    stc(128)
                    w("")
                    scp(17,7)
                    stc(32768)
                    fileaddB = read()
                    if fileaddB == "" then
                        r("MineOS/Programs/Settings")
                        error("Terminated")
                    elseif fs.exists(fileaddB) then
                        sbc(1)
                        scp(1,17)
                        fs.delete("MineOS/Texture/Desktop/"..currentUserName.."/1")
                        fs.copy(fileaddB, "MineOS/Texture/Desktop/"..currentUserName.."/1")
                        sbc(256)
                        scp(17,7)
                        stc(16384)
                        w("File added!    ")
                        sleep(1)
                        r("MineOS/Programs/Settings")
                        error("Terminated")
                    elseif not fs.exists(fileaddB) then
                        scp(17,7)
                        stc(16384)
                        w("File not found!")
                        sleep(2)
                        r("MineOS/Programs/Settings")
                        error("Terminated")
                    end
                    break
                end
                --############## Custom # Pastebin ###############--
                if X >= 26 and X <= 35 and Y == 9 then
                    sbc(2048)
                    stc(1)
                    scp(15,5)
                    w("Download file     ")
                    sbc(16384)
                    w("X")
                    sbc(1)
                    stc(32768)
                    scp(15,6)
                    w(": Code:           :")
                    scp(15,7)
                    sbc(1)
                    --	w(": ")
                    --	sbc(258)
                    --	w([[               ]])
                    --	sbc(1)
                    --	w(" :")
                    w(":                 :")
                    sbc(1)
                    scp(15,8)
                    w(":                 :")
                    scp(15,9)
                    w("+-----------------+")
                    scp(17,7)
                    sbc(258)
                    stc(128)
                    w("")
                    scp(17,7)
                    stc(32768)
                    fileaddB2 = read()
                    if fileaddB2 == "" then
                        r("MineOS/Programs/Settings")
                        error("Terminated")
                    else

                        local response = http.get(
                            "http://pastebin.com/raw.php?i="..textutils.urlEncode( fileaddB2 )
                        )

                        if response then
                            fs.delete("MineOS/Texture/Desktop/"..currentUserName.."/1")
                            local sResponse = response.readAll()
                            response.close()

                            local file = fs.open("MineOS/Texture/Desktop/"..currentUserName.."/1", "w" )
                            file.write( sResponse )
                            file.close()
                        else
                            r("MineOS/Programs/Settings")
                            error("Terminated")
                        end
                        sbc(1)
                        scp(1,17)
                        sbc(256)
                        scp(17,7)
                        stc(16384)
                        w("File added!    ")
                        sleep(1)
                        r("MineOS/Programs/Settings")
                        error("Terminated")
                    end
                    break
                end
                --########################################--
                if X >= 1 and X <= 12 and Y == 3 then
                    SystemClear()
                    setLayout()
                    SystemInfo()
                    break
                end
                if X >= 1 and X <= 12 and Y == 4 then
                    SystemMouse()
                    SystemClear()
                    setLayout()
                    SystemProfiles()
                    break
                end
                if X >= 1 and X <= 12 and Y == 6 then
                    SystemClear()
                    setLayout()
                    SystemSettings()
                    break
                end
                if X >= 1 and X <= 6 and Y == 19 then
                    startmenu()
                    error("Terminated!")
                    break
                end
                if X >= 51 and X <= 51 and Y == 1 then
                    resetDesktop()
                    error("Terminated")
                    break
                end
            end

            --############################################################################--
        end
        if X >= 1 and X <= 12 and Y == 6 then
            SystemClear()
            setLayout()
            SystemSettings()
            while true do
                event, button, X, Y = os.pullEvent("mouse_click")
                Y = Y + 1
                if X >= 16 and X <= 18 and Y == 4 then
                    bootscreenSK = fs.open("MineOS/Config/Bootscreen", "w")
                    bootscreenSK.write("true")
                    bootscreenSK.close()
                    SystemSettingsReload()
                end
                if X >= 20 and X <= 23 and Y == 4 then
                    bootscreenSK = fs.open("MineOS/Config/Bootscreen", "w")
                    bootscreenSK.write("false")
                    bootscreenSK.close()
                    SystemSettingsReload()
                end
                --########################################--
                if X >= 1 and X <= 12 and Y == 3 then
                    SystemClear()
                    setLayout()
                    SystemInfo()
                    break
                end
                if X >= 1 and X <= 12 and Y == 4 then
                    SystemMouse()
                    SystemClear()
                    setLayout()
                    SystemProfiles()
                    break
                end
                if X >= 1 and X <= 6 and Y == 19 then
                    startmenu()
                    error("Terminated!")
                    break
                end
                if X >= 1 and X <= 12 and Y == 5 then
                    SystemMouse()
                    SystemClear()
                    setLayout()
                    SystemBackground()
                    break
                end
                if X >= 51 and X <= 51 and Y == 1 then
                    resetDesktop()
                    error("Terminated")
                    break
                end
            end
        end


        if X >= 1 and X <= 6 and Y == 19 then
            startmenu()
        end
    end
end
--BSOD.doErrorTrap(SystemMouse)
SystemMouse()
