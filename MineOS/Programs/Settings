    sbc(1)
    write(" ")
    sbc(256)
    write(" Purple    ")

    sbc(1)
    scp(15,8)
    write("Custom backgrounds:")
    sbc(256)
    scp(15,9)
    write(" New ")
    sbc(1)
    write(" ")
    sbc(256)
    write(" Open ")
    sbc(1)
    write(" ")
