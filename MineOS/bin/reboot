term.setBackgroundColor(8)
sleep(1)
term.clear(); term.setCursorPos(1, 1)
term.setTextColor(1)
for shutdown1=0,1 do
    term.setCursorPos(20,9)
    write([[| Reboot]])
    sleep(0.1)
    term.setCursorPos(20,9)
    write([[/ Reboot]])
    sleep(0.1)
    term.setCursorPos(20,9)
    write([[- Reboot]])
    sleep(0.1)
    term.setCursorPos(20,9)
    write([[\ Reboot]])
    sleep(0.1)
end
os.reboot()
