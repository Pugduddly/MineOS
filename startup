				w([[/ Shutdown]])
				s(0.1)
				scp(20,9)
				w([[- Shutdown]])
				s(0.1)
				scp(20,9)
				w([[\ Shutdown]])
				s(0.1)
			end
			os.shutdown()
		end
-- #################################
  end
end
