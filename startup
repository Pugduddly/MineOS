-- ###################### -- 
-- ## TabJump 1 ## -- 
function tabjump2()
        local sEvent, param = os.pullEvent("key")
        if sEvent == "key" then
			r("clear")
			scp(1,19)
			w([[Skip..]])
			s(0.3)
        end
    end
-- ############### -- 
-- ## TabJump 2 ## -- 
function tabjump1()
if noBootScreen == "false" then
	paintutils.drawImage(logo, 1, 1)
else
	tc()
	stc(16)
	scp(1,2)
	p([[Installed programs:]])
	scp(1,3)
	stc(8)
	s(0.1)
end
r("programs")
if noBootScreen == "false" then
	paintutils.drawImage(logo, 1, 1)
else
	stc(16)
	s(0.5)
	p([[Memory:]])
	s(0.1)
end
r("list")
if noBootScreen == "false" then
	paintutils.drawImage(logo, 1, 1)
end
if noBootScreen == "true" then
	stc(16384)
	scp(16,19)
	p([[Press enter to skip]])
-- ########################## -- Ladebalken 1 -- ############################ -- 
	stc(2)
	for loadup1=1,5 do
		loadup1=loadup1*20
		scp(24,16)
		w(loadup1)
		w([[%]])
		scp(27,16)
		w([[ ]])
		s(0.1)
		scp(20,17)
		w([[... ooo ...]])
		s(0.1)
		scp(20,17)
		w([[ .. Ooo .. ]])
		s(0.1)
		scp(20,17)
		w([[  . oOo .  ]])
		s(0.1)
		scp(20,17)
		w([[    ooO    ]])
		s(0.1)
		scp(22,17)
		w([[. ooo .]])
		s(0.1)
		scp(21,17)
		w([[.. ooo ..]])
		s(0.1)
		scp(20,17)
		w([[... ooo ...]])
		s(0.1)
	end
	r("clear")
else
	sleep(1)
end
-- ############################################################################# -- 
end
function tabjumpshell()
parallel.waitForAny(tabjump1, tabjump2)
end
BSOD.doErrorTrap(tabjumpshell)
